from abc import ABC, abstractmethod

class Person(ABC):
    def __init__ (self, name, power):
        self.name = name
        self.power = power
        
    @abstractmethod
    def talk(self):
        print ("talk")
        
        
class Gladiator(Person):
    def __init__(self):
        super().__init__(name; power)
        
    def talk(self):
        print ("talk")

    def recruit(self):
        pass
    
    def show_legion(self):
        pass
    
class Peasant(Person):
    def __init__(self):
        super().__init__(name; power)

def talk(self):
        print ("talk")




















